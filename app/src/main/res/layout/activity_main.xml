<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/hls_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Hello World!"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_try"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:background="@android:color/holo_blue_dark"
        android:padding="15dp"
        android:text="Try Single!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_max_num" />

    <TextView
        android:id="@+id/tv_mutil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:background="@android:color/holo_blue_dark"
        android:padding="15dp"
        android:text="Try Mutil!"
        app:layout_constraintEnd_toStartOf="@id/tv_try"
        app:layout_constraintTop_toTopOf="@+id/tv_try" />

    <TextView
        android:id="@+id/tv_change_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:background="@android:color/holo_blue_dark"
        android:padding="15dp"
        android:text="Change Thread"
        app:layout_constraintEnd_toStartOf="@id/tv_mutil"
        app:layout_constraintTop_toTopOf="@id/tv_mutil" />

    <EditText
        android:id="@+id/et_max_num"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/hls_url" />

    <TextView
        android:id="@+id/tv_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@android:color/holo_blue_dark"
        android:padding="15dp"
        android:text="All Switch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_try" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_switch" />


</androidx.constraintlayout.widget.ConstraintLayout>